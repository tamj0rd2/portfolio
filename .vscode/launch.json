{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Test with debugger",
      "port": 5858,
      "runtimeArgs": [
        "--debug-brk",
        "--nolazy"
      ],
      "program": "${workspaceRoot}/node_modules/react-scripts/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand",
        "--env=jsdom"
      ],
      "cwd": "${workspaceRoot}",
      "skipFiles": [
        "**/node_modules/**/*.js",
        "<node_modules>/**/*.js"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome debug",
      "url": "http://localhost:3000",
      "userDataDir": "${workspaceRoot}/.vscode/chrome",
      "webRoot": "${workspaceRoot}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/"
      }
    }
  ]
}
